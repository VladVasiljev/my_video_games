<%= javascript_include_tag 'jquery.raty.js', "data-turbolinks-track" => false %>
<div class="form">

  <%= simple_form_for ([@game, review]) do |f| %>
    <div id="star-rating">
    <%= f.input :comment, label: 'Review:' %>
    <%= f.input :hours_played, label: 'Hours Played:', :input_html => { :type => "number" }%>
    <%= f.button :submit %>
  <% end %>

  </div>
</div>

<script>
    $('#star-rating').raty({
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>