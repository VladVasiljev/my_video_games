<%= form_for @game, html: {multipart: true} do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Game_Title %>:
    <%= form.text_field :Game_Title %>
  </div>

  <!--  Had to edit this field as I wasn't able to scroll back to older years like 2000 etc
  and also changed the format the date is displayed-->
  <div class="field">
    <%= form.label :Release_Date %>
    <%= form.date_select :Release_Date, :order => [:day, :month, :year], :start_year => Time.now.year - 80 %>
  </div>

  <div class="field">
    <%= form.label :Description %>
    <%= form.text_area :Description %>
  </div>

  <div class="field">
    <%= form.label :Publisher %>
    <%= form.text_field :Publisher %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
